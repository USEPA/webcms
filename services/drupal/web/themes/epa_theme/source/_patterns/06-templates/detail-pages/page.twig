{% set content %}
  {% embed '@components/article/article.twig' with {
    'title': title,
    'intro': intro,
    'content': body,
    'sidebar': sidebar,
    'show_admin_info': show_admin_info,
  } %}

    {% block admin_info %}
      {{ admin_info }}
    {% endblock %}
  {% endembed %}
{% endset %}

{% embed '@layouts/page/page.twig' with {
  'has_in_page_nav': has_in_page_nav,
  'has_header': has_header,
  'has_footer': has_footer,
  'is_narrow': is_narrow,
  'modifier_classes': 'page-no-sidebar',
} %}
  {% block info %}
    {{ header_info }}
  {% endblock %}

  {% block contact %}
    {{ contact_link }}
  {% endblock %}

  {% block in_page_nav %}
  {% endblock %}

  {% block content %}
    {{ content }}
  {% endblock %}

  {% block footer %}
    {{ footer }}
  {% endblock %}
{% endembed %}
